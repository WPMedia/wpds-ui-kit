{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "validate": {
      "dependsOn": ["build"],
      "outputs": [""]
    },
    "app#build": {
      "dependsOn": [
        "@washingtonpost/wpds-ui-kit#build",
        "@washingtonpost/wpds-alert-banner#build"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    }
  }
}
